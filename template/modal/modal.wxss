.bgBlack{
  position: fixed;
  width: 100vw;
  height: 100vh;
  z-index: 999;
  top:0;
  background: rgba(0,0,0,0.5);
  display: flex;
  align-items: center;
}
.bgBlack::after{
  content:'';
  position: absolute;
  /* background: rgba(0,0,0,.4); */
  width: 100%;
  height: 100%;
  z-index: 1;
}
.modal-container{
  width: 90%;
  height: 400px;
  margin: 0 auto;
}
.img-wrap{
  height: 100px;
  width: 100%;
}
.img-wrap img{
  height: 100%;
  width: 100%;
}
.content{
  height: calc(100% - 100px);
  width: 100%;
  background: green;
  color:white;
}
.none{
  display: none;
}