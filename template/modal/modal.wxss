.bgBlack{
  position: absolute;
  width: 100vw;
  height: 100vh;
  z-index: 999;
}
.bgBlack::after{
  content:'';
  position: absolute;
  background: rgba(0,0,0,.4);
  width: 100%;
  height: 100%;
  z-index: 1;
}
.modal-container{
  width: 90%;
  height: 400px;
}
.img-wrap{
  height: 100px;
  width: 100%;
}
.img-wrap img{
  height: 100%;
  width: 100%;
}
.content{
  height: calc(100% - 100px);
  width: 100%;
}