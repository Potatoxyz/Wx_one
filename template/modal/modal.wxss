.bgBlack {
  position: fixed;
  width: 100vw;
  height: 100vh;
  z-index: 10;
  top: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
}

.bgBlack::after {
  content: '';
  position: absolute;
  /* background: rgba(0,0,0,.4); */
  width: 100%;
  height: 100%;
  z-index: 1;
}

.modal-container {
  width: 90%;
  height: 400px;
  margin: 0 auto;
  position: relative;
  margin-top:10vh;
}

.img-wrap {
  height: 100px;
  width: 100%;
}

.img-wrap img {
  height: 100%;
  width: 100%;
}

.content {
  height: calc(100% - 100px);
  background: rgba(255, 255, 255, 0.9);
  color: black;
  padding: 15px;
  border-radius: 5px;
  font-size: 25rpx;
}

.none {
  display: none;
}

.closeModal {
  position: absolute;
  bottom: -80px;
  width: 40px;
  height: 40px;
  left: 50%;
  margin-left: -20px;
  z-index: 100;
}

.close {
  width: 100%;
  height: 100%;
}
.button-wrap{
  position: absolute;
  z-index:100;
  bottom:20px;
  left:50%;
  transform:translateX(-50%);
}