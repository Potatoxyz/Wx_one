.tag {
  color: #743D01;
  font-size: 24rpx;
  position: relative;
  display:flex;
  height: 100%;
  align-items: center;
  justify-content: center;
}

.tag1, .tag2 {
  width: 25%;
}
.tag2{
   margin-right: 30rpx;
   left: -3px;
}
.tag3 {
  width: 42%;
  display: flex;
}
.tag3 icon{
  margin-right: 15rpx;
  width: 20%;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
.tag3 input {
 display: inline-block;
 width: 80%;
}
 .tag1::after,.tag2::after,.tag3::after {
  transform: perspective(0.5em) rotateX(2deg);
  transform-origin: left;
  border-radius: 8rpx;
  content: '';
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: -2;
  background: #FF9415;
}
.tag1::after{
  z-index: -1;
  border-right: 2rpx solid red;
}
 
